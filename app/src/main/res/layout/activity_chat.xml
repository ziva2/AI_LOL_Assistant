<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp"> <!-- 채팅 화면 배경도 흰색 -->

    <!-- 채팅 출력 -->
    <TextView
        android:id="@+id/tvChatOutput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_search_bar"
        android:gravity="start|top"
        android:padding="8dp"
        android:text="Chat output will appear here..."
        android:textSize="16sp" />

    <!-- 사용자 입력 -->
    <EditText
        android:id="@+id/etChatInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:hint="Type your message..."
        android:padding="8dp" />

    <!-- 전송 버튼 -->
    <Button
        android:id="@+id/btnSendChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:backgroundTint="#49454F"
        android:backgroundTintMode="src_atop"
        android:text="Chat GPT에게 물어보기"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</LinearLayout>
