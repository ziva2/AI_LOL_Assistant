<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 챔피언 이름 -->
        <TextView
            android:id="@+id/tvChampionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Champion: "
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- Kills -->
        <TextView
            android:id="@+id/tvKills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kills: "
            android:layout_marginBottom="8dp" />

        <!-- Deaths -->
        <TextView
            android:id="@+id/tvDeaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deaths: "
            android:layout_marginBottom="8dp" />

        <!-- Assists -->
        <TextView
            android:id="@+id/tvAssists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assists: "
            android:layout_marginBottom="8dp" />

        <!-- 골드 -->
        <TextView
            android:id="@+id/tvGoldEarned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gold Earned: "
            android:layout_marginBottom="8dp" />

        <!-- CS -->
        <TextView
            android:id="@+id/tvCsScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CS Score: "
            android:layout_marginBottom="8dp" />

        <!-- 아이템 -->
        <TextView
            android:id="@+id/tvItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items: "
            android:layout_marginBottom="8dp" />

        <!-- 스펠 -->
        <TextView
            android:id="@+id/tvSpells"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spells: "
            android:layout_marginBottom="8dp" />
    </LinearLayout>
</ScrollView>
