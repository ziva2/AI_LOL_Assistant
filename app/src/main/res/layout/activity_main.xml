<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/file1">

    <!-- 소환사명 입력 -->
    <RelativeLayout
        android:id="@+id/search_bar_username"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="352dp"
        android:layout_alignParentLeft="true"
        android:clipToOutline="true"
        android:background="@drawable/bg_search_bar">

        <EditText
            android:id="@+id/etSummonerName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="  소환사명을 입력해주세요."
            android:padding="8dp"
            android:inputType="text"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textColorHint="#7F000000" />
    </RelativeLayout>

    <!-- 태그라인 입력 -->
    <RelativeLayout
        android:id="@+id/search_bar_tagline"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="419dp"
        android:layout_alignParentLeft="true"
        android:clipToOutline="true"
        android:background="@drawable/bg_search_bar">

        <EditText
            android:id="@+id/etTagLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="  태그를 입력해주세요. (e.g., KR1)"
            android:padding="8dp"
            android:inputType="text"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textColorHint="#7F000000" />
    </RelativeLayout>

    <!-- 검색 버튼 -->
    <RelativeLayout
        android:id="@+id/modern_medi"
        android:layout_width="147dp"
        android:layout_height="60dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="503dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/btn_search_selector">

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:elevation="4dp"
            android:padding="8dp"
            android:text="" />
    </RelativeLayout>

</RelativeLayout>
