<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 상단 제목 -->

    <!-- 소환사명 입력 -->

    <TextView
        android:id="@+id/tvLeagueTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="104dp"
        android:text="LEAGUEof\nLEGENDS"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/search_bar_username"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvLeagueTitle"
        android:layout_marginTop="40dp"
        android:clipToOutline="true"
        android:background="@drawable/bg_search_bar">

        <EditText
            android:id="@+id/etSummonerName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="  소환사명을 입력해주세요."
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#000000"
            android:textColorHint="#7F000000"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- 태그라인 입력 -->
    <RelativeLayout
        android:id="@+id/search_bar_tagline"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/search_bar_username"
        android:layout_marginTop="16dp"
        android:clipToOutline="true"
        android:background="@drawable/bg_search_bar">

        <EditText
            android:id="@+id/etTagLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="  태그를 입력해주세요. (e.g., KR1)"
            android:padding="8dp"
            android:inputType="text"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textColorHint="#7F000000"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- 검색 버튼 -->
    <RelativeLayout
        android:id="@+id/modern_medi"
        android:layout_width="147dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/search_bar_tagline"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_search_selector"
        android:clipToOutline="true">

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:elevation="4dp"
            android:padding="8dp"
            android:text="" />
    </RelativeLayout>

</RelativeLayout>
